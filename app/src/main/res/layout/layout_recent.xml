<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:contentPadding="0dp"
    app:cardUseCompatPadding="false"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="10dp"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_recent"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_song"
            app:riv_corner_radius_top_left="5dp"
            app:riv_corner_radius_top_right="5dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_recent_more"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="3dp"
                android:padding="5dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:src="@mipmap/ic_more"
                android:background="@drawable/ripple"/>

            <TextView
                android:id="@+id/tv_recent_song"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:layout_toStartOf="@+id/iv_recent_more"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="asdsad"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_recent_cat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_recent_song"
                android:layout_marginEnd="3dp"
                android:layout_marginStart="5dp"
                android:layout_toStartOf="@+id/iv_recent_more"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="asdsad"
                android:textColor="@color/black80"
                android:textSize="10sp"/>

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>